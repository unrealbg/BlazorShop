@inject BlazorShop.Web.Shared.Services.Contracts.INewsletterService NewsletterService

<div class="bg-neutral-900 text-neutral-100">
  <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8 py-10">
    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-8">
      <div>
        <div class="text-lg font-extrabold tracking-wider">BLAZORSHOP®</div>
        <p class="mt-1 text-sm text-neutral-300">E‑COMMERCE APPLICATION</p>
        <p class="mt-3 text-sm text-neutral-400">Quality products, fair prices, fast delivery.</p>
      </div>

      <div>
        <div class="text-sm font-semibold uppercase text-neutral-300">Shop</div>
        <ul class="mt-3 space-y-2 text-sm">
          <li><a href="new-releases" class="hover:text-white/80">New Releases</a></li>
          <li><a href="todays-deals" class="hover:text-white/80">Today's Deals</a></li>
          <li><a href="my-cart" class="hover:text-white/80">Cart</a></li>
          <li><a href="about-us" class="hover:text-white/80">About us</a></li>
        </ul>
      </div>

      <div>
        <div class="text-sm font-semibold uppercase text-neutral-300">Support</div>
        <ul class="mt-3 space-y-2 text-sm">
          <li><a href="customer-service" class="hover:text-white/80">Customer Service</a></li>
          <li><a href="faq" class="hover:text-white/80">FAQ</a></li>
          <li><a href="privacy" class="hover:text-white/80">Privacy</a></li>
          <li><a href="terms" class="hover:text-white/80">Terms</a></li>
        </ul>
      </div>

      <div>
        <div class="text-sm font-semibold uppercase text-neutral-300">Stay up to date</div>
        <EditForm Model="this" OnValidSubmit="SubscribeAsync">
          <div class="mt-3 flex items-center gap-2">
            <InputText @bind-Value="_email" type="email" class="w-full rounded-md bg-white/10 border border-white/20 px-3 py-2 text-sm placeholder:text-neutral-400 focus:outline-none focus:ring-1 focus:ring-white/40" placeholder="Your email" />
            <button type="submit" class="inline-flex items-center rounded bg-white text-neutral-900 px-3 py-2 text-sm font-semibold hover:bg-white/90" disabled="@_isSubmitting">@(_isSubmitting?"Subscribing…":"Subscribe")</button>
          </div>
        </EditForm>
        <p class="mt-2 text-xs text-neutral-400">By subscribing you agree to our <a href="privacy" class="underline">Privacy</a>.</p>
      </div>
    </div>

    <div class="mt-8 border-t border-white/10 pt-4 text-xs text-neutral-400 text-center">© @DateTime.UtcNow.Year BlazorShop. All rights reserved.</div>
  </div>
</div>

@code {
  private string _email = string.Empty;
  private bool _isSubmitting = false;

  private async Task SubscribeAsync()
  {
    if (string.IsNullOrWhiteSpace(_email) || !_email.Contains('@'))
    {
        ToastService.ShowErrorToast("Please enter a valid email address.");
        return;
    }

    try
    {
        _isSubmitting = true;
        var result = await NewsletterService.SubscribeAsync(new BlazorShop.Web.Shared.Models.Newsletter.SubscribeRequest(_email));
        if (result.Success)
        {
            _email = string.Empty;
            ToastService.ShowSuccessToast("Thanks for subscribing!");
        }
        else
        {
            ToastService.ShowErrorToast(result.Message ?? "Subscription failed.");
        }
    }
    catch
    {
        ToastService.ShowErrorToast("Subscription failed. Please try again later.");
    }
    finally
    {
        _isSubmitting = false;
    }
  }
}