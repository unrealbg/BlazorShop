@page "/about-us"

<section class="mx-auto max-w-5xl px-4 sm:px-6 lg:px-8 py-10">
  <div class="rounded-2xl bg-white/80 shadow p-6 text-center">
    <header class="mb-6">
      <h1 class="text-2xl font-extrabold">About Us</h1>
    </header>
    <p>Welcome to our shop! We are dedicated to providing the best products for our customers.</p>

    <div class="mt-8">
      <h2 class="text-xl font-bold">Meet Our Team</h2>
      <div class="mt-4 grid gap-6 sm:grid-cols-2">
        <div class="rounded-xl border p-4">
          <img src="team1.jpg" alt="Team Member" class="w-full aspect-[4/3] object-cover rounded" />
          <h3 class="mt-3 font-semibold">John Doe</h3>
          <p class="text-sm text-neutral-700">Founder</p>
        </div>
        <div class="rounded-xl border p-4">
          <img src="team2.jpg" alt="Team Member" class="w-full aspect-[4/3] object-cover rounded" />
          <h3 class="mt-3 font-semibold">Jane Smith</h3>
          <p class="text-sm text-neutral-700">Manager</p>
        </div>
      </div>
    </div>
  </div>
</section>
