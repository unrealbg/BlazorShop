@page "/about-us"

<div class="container mb-3">
    <div class="col-lg-12">
        <div class="p-2 mt-3 w-100" style="background-color: rgba(255, 255, 255, 0.5);">
            <div class="card m-2 text-center" style="background-color: rgba(255, 255, 255, 0.7);">
                <div class="card-header">
                    <h1 >About Us</h1>
                </div>
                <p>Welcome to our shop! We are dedicated to providing the best products for our customers.</p>
                <div class="team-section">
                    <h2>Meet Our Team</h2>
                    <div class="team-members mb-3">
                        <div class="team-member">
                            <img src="team1.jpg" alt="Team Member">
                            <h3>John Doe</h3>
                            <p>Founder</p>
                        </div>
                        <div class="team-member">
                            <img src="team2.jpg" alt="Team Member">
                            <h3>Jane Smith</h3>
                            <p>Manager</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
