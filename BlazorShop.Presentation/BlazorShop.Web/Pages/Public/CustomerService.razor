@page "/customer-service"

<div class="container mb-3">
    <div class="col-lg-12">
        <div class="p-2 mt-3 w-100" style="background-color: rgba(255, 255, 255, 0.5);">
            <div class="card m-2 text-center" style="background-color: rgba(255, 255, 255, 0.7);">
                <div class="card-header">
                    <h1>Customer Service</h1>
                </div>
                <div class="card-body">
                    <h2>We're Here to Help</h2>
                    <p>At our shop, customer satisfaction is our top priority. Contact us for any assistance.</p>

                    <div class="service-section mb-3">
                        <h3>Contact Us</h3>
                        <ul class="service-contact">
                            <li><strong>Email:</strong> support@yourstore.com</li>
                            <li><strong>Phone:</strong> +1 123-456-7890</li>
                            <li><strong>Address:</strong> 123 Main Street, Your City, Your Country</li>
                        </ul>
                    </div>

                    <div class="service-section mb-3">
                        <h3>Frequently Asked Questions</h3>
                        <p>Find answers to common questions about orders, returns, and shipping.</p>
                        <a class="btn btn-primary" href="faq">Visit FAQ</a>
                    </div>

                    <div class="service-section mb-3">
                        <h3>Submit a Ticket</h3>
                        <form @onsubmit="SubmitTicket">
                            <div class="form-group">
                                <input type="text" @bind="CustomerName" class="form-control mb-2" placeholder="Your Name" required />
                            </div>
                            <div class="form-group">
                                <input type="email" @bind="CustomerEmail" class="form-control mb-2" placeholder="Your Email" required />
                            </div>
                            <div class="form-group">
                                <textarea @bind="CustomerMessage" class="form-control mb-2" rows="4" placeholder="Your Message" required></textarea>
                            </div>
                            <button type="submit" class="btn btn-success">Submit</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
