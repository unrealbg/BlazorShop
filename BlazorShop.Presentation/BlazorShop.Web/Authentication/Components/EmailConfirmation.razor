@page "/confirm-email"

<section class="min-h-[70vh] grid place-items-center px-4 py-10">
  <div class="w-full max-w-md">
    <div class="rounded-2xl shadow-[0_12px_30px_rgba(0,0,0,.08)] border border-black/5 overflow-hidden bg-white/80">
      <div class="px-6 py-4 text-center">
        <h2 class="text-xl font-extrabold">Email Confirmation</h2>
      </div>
      <div class="px-6 py-6 text-center">
        @if (_isLoading)
        {
          <div class="flex flex-col items-center">
            <div class="h-10 w-10 animate-spin rounded-full border-2 border-neutral-300 border-t-neutral-900"></div>
            <p class="mt-3">Processing your request...</p>
          </div>
        }
        else if (!string.IsNullOrEmpty(_message))
        {
          <div class="mb-3 rounded-md px-4 py-3 text-sm font-medium @(_isSuccess ? "bg-emerald-50 text-emerald-700" : "bg-red-50 text-red-700")">
            <p>@_message</p>
          </div>
          @if (_isSuccess)
          {
            <a href="/authentication/login" class="inline-flex items-center rounded bg-neutral-900 text-white px-4 py-2 font-semibold hover:bg-neutral-800">Go to Login</a>
          }
        }
      </div>
    </div>
  </div>
</section>