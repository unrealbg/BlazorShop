@inherits LayoutComponentBase

<!-- Admin top band styled like MainLayout -->
<div class="clip-diagonal bg-neutral-900 text-neutral-100">
    <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8 h-12 sm:h-14 flex items-center justify-center">
        <nav class="flex items-center justify-center gap-6 text-sm font-medium">
            <a href="admin" class="hover:text-white/80">Home</a>
            <a href="product" class="hover:text-white/80">Products</a>
            <a href="category" class="hover:text-white/80">Categories</a>
            <a href="/authentication/logout" class="text-amber-400 hover:text-amber-300">Logout</a>
        </nav>
    </div>
</div>

<a href="/" class="flex items-center gap-2">
    <img src="images/header-logo.png" alt="Logo" class="h-8 w-auto">
</a>
<button class="ml-auto md:hidden p-2 border rounded" @onclick="ToggleMenu">☰</button>
<div class="fixed inset-y-0 left-0 w-64 bg-white shadow-lg transform transition-transform duration-200 ease-out z-50 p-4 md:static md:translate-x-0"
     style="transform: translateX(@(IsMenuVisible ? "0" : "-100%"));">
    <ul class="space-y-3">
        <li>
            <a href="admin" @onclick="HideMenu" class="inline-flex items-center gap-2">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2"><path d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6"/></svg>
                Home
            </a>
        </li>
        <li>
            <a href="product" @onclick="HideMenu" class="inline-flex items-center gap-2">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2"><path d="M20 7H4m16 0l-2 12H6L4 7m16 0L18 5H6L4 7m5 4h6"/></svg>
                Products
            </a>
        </li>
        <li>
            <a href="category" @onclick="HideMenu" class="inline-flex items-center gap-2">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2"><path d="M4 6h16M4 12h16M4 18h16"/></svg>
                Categories
            </a>
        </li>
        <li>
            <a href="authentication/logout" class="text-red-600 inline-flex items-center gap-2" @onclick="HideMenu">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2"><path d="M17 16l4-4m0 0l-4-4m4 4H7"/><path d="M7 8v8"/></svg>
                Logout
            </a>
        </li>
    </ul>
</div>