@if (IsVisible)
{
  <div class="fixed inset-0 z-50 flex items-center justify-center">
    <div class="fixed inset-0 bg-black/50" @onclick="CloseModal"></div>
    <div class="relative z-10 w-full max-w-2xl rounded-xl bg-white shadow-lg overflow-hidden">
      <div class="flex items-center justify-between px-4 py-3 border-b">
        <h5 class="text-lg font-semibold">@Product?.Name</h5>
        <button type="button" class="text-2xl leading-none px-2" @onclick="CloseModal" aria-label="Close">×</button>
      </div>
      <div class="p-4">
        <div class="text-center">
          <img src="@Product?.Image" alt="@Product?.Name" class="mx-auto rounded mb-3 shadow max-h-64 object-contain" />
          <p class="text-sm text-neutral-700">@Product?.Description</p>
          <div class="mt-3 text-sm">
            <p class="font-semibold text-emerald-700">€ @Product?.Price</p>
            <p class="text-neutral-700"><strong>Quantity Available:</strong> @Product?.Quantity</p>
          </div>
        </div>
      </div>
      <div class="px-4 py-3 border-t bg-neutral-50 flex items-center justify-end gap-2">
        <button class="inline-flex items-center rounded bg-neutral-900 text-white px-4 py-2 font-semibold hover:bg-neutral-800" @onclick="HandleAddToCart">Add to Cart</button>
        <button class="inline-flex items-center rounded bg-red-600 text-white px-4 py-2 font-semibold hover:bg-red-700" @onclick="CloseModal">Close</button>
      </div>
    </div>
  </div>
}
