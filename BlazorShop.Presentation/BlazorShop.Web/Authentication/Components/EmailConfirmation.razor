@page "/confirm-email"

<div class="container mt-5">
    <div class="col-lg-12">
        <div class="p-2 w-100" style="background-color: rgba(255, 255, 255, 0.5);">
            <div class="card m-2" style="background-color: rgba(255, 255, 255, 0.7);">
                <div class="card-header text-center">
                    <h2>Email Confirmation</h2>
                </div>
                <div class="card-body text-center">
                    @if (_isLoading)
                    {
                        <div class="spinner-border text-primary" role="status">
                            <span class="visually-hidden">Loading...</span>
                        </div>
                        <p class="mt-3">Processing your request...</p>
                    }
                    else if (!string.IsNullOrEmpty(_message))
                    {
                        <div class="alert @(_isSuccess ? "alert-success" : "alert-danger")">
                            <p>@_message</p>
                        </div>
                        @if (_isSuccess)
                        {
                            <a href="/authentication/login" class="btn btn-primary mt-3">Go to Login</a>
                        }
                    }
                </div>
            </div>
        </div>
    </div>
</div>