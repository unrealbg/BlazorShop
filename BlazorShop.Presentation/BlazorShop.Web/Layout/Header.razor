@using BlazorShop.Web.Components.Header

<div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8 py-4">
    <div class="grid grid-cols-1 md:grid-cols-3 gap-4 items-center relative">
        <a href="/" class="flex items-center gap-2">
            <img src="images/header-logo.png" alt="Logo" class="h-10 w-auto">
            <span class="font-bold tracking-wider">BLAZORSHOP®</span>
        </a>
        <div class="flex items-center gap-3 justify-center">
            <button class="inline-flex items-center gap-2 rounded-md bg-neutral-900 text-white px-3 py-1.5 text-sm font-medium hover:bg-neutral-800" @onclick="ToggleCategories">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path d="M4 6h16M4 12h16M4 18h16"/></svg>
                Categories
            </button>
            <SearchBarComponent Products="@Products" />
        </div>
        <div class="flex justify-end">
            <HeaderBoxComponent />
        </div>

        @if (_showCategories)
        {
            <div class="absolute left-1/2 -translate-x-1/2 top-full mt-2 w-full sm:w-2/3 bg-white border border-neutral-200 rounded-lg shadow-xl p-4 z-10">
                <BlazorShop.Web.Layout.CategoryComponent />
            </div>
        }
    </div>
</div>